<Page
    x:Class="DSI_Proyecto.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSI_Proyecto"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.Resources>
        <Style x:Key="EstiloBotones" TargetType="Button">
            <Setter Property="FontSize" Value="30" />
            <Setter Property="Margin" Value="0,5,0,0" />
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="Background" Value="Purple" />
            <Setter Property="MaxHeight" Value="200"/>
            <Setter Property="MaxWidth" Value="200"/>
        </Style>

    </Page.Resources>
    
    <Grid x:ConnectionId='2'                                       >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!--<Border Background="Black" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="-10,0,10,0"/>-->

        <!--Fondos-->
        <Viewbox Grid.Row="0" Grid.RowSpan="2"  VerticalAlignment="Center" Stretch="Fill">
            <Image Source="Assets/fondoPapel.png"/>
        </Viewbox>
        <Viewbox Grid.Column="1" Grid.Row="1" Stretch="Fill" >
            <Image Source="Assets/cliente.png"/>
        </Viewbox>
        <Viewbox  Grid.Column="1" Grid.Row="0" Stretch="Fill">
            <Image Source="Assets/cola.png"/>
        </Viewbox>

        <!--Abajo derecha-->
        <Viewbox Grid.Row="1" Grid.Column="1">
            <Grid Height="500" Width="500">
                <StackPanel Orientation="Vertical" VerticalAlignment="Top"
                             Margin="0,90,400,0" MaxHeight="200" MaxWidth="100">
                    <Button Content="Cachear" Style= "{StaticResource EstiloBotones}"/>
                    <Button Content="DNI" Margin="10,53,0,0" Style="{StaticResource EstiloBotones}"/>
                </StackPanel>
                <Button Content="Aceptar" VerticalAlignment="Bottom" Margin="10,0,0,46"
                            Style="{StaticResource EstiloBotones}"/>
                <Button Content="Rechazar" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,46"
                            Style="{StaticResource EstiloBotones}"/>
            </Grid>
        </Viewbox>

        <Viewbox Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
            <Grid Height="1000" Width="1000">
                <Canvas x:ConnectionId='5' x:Name="MiCanvas"                                               >

                    <ContentControl x:ConnectionId='6' x:Name="LibroCentro"                                                                                                                                     RenderTransformOrigin="0.496,0.528" Canvas.Left="222" Canvas.Top="322">
                        <Grid>
                            <Image  Source="Assets/librillo.PNG" />
                            <Button Content="Vestimenta" Margin="60,-100,0,0" Style= "{StaticResource EstiloBotones}"/>

                        </Grid>
                    </ContentControl>
                </Canvas>
            </Grid>
        </Viewbox>
      
        <!--Izquierda-->
        <Viewbox Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" >
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Image x:ConnectionId='3' Source="Assets/libro.png"                                                                                    MaxHeight="100" MaxWidth="100" HorizontalAlignment="Left" Height="Auto" Margin="0,0,700,0"/>

                <Image x:ConnectionId='4' Grid.Column="0"                                                                               Grid.Row="1" Source="Assets/movil.png" MaxHeight="100" MaxWidth="100" HorizontalAlignment="Right"/>
            </StackPanel>
        </Viewbox>

    </Grid>
</Page>


